rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --------------------------------
    // Collection Rules
    // --------------------------------

    // Users can only read and write their own profile document.
    // Listing all users is denied to prevent user enumeration.
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isSignedIn() && request.resource.id == request.auth.uid;
      allow list: if false;
    }

    // Users can only interact with their own job applications.
    // The `userId` on the document must match the authenticated user.
    match /users/{userId}/job_applications/{applicationId} {
      allow list, get: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update, delete: if isOwner(userId) && resource.data.userId == userId;
    }

    // Default deny all other paths.
    // This is a security best practice to ensure no paths are left open.
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
